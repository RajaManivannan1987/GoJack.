<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ColorAppBackground"
    android:orientation="vertical"
    tools:context=".Activities.GoOnline">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/ColorGrayLight"
        android:gravity="center"
        android:text="OnLine"
        android:textColor="#000080"
        android:textSize="18sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@color/app_BackgroundColor"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/bikeImageView"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                app:civ_border_color="@color/ColorGray"
                app:civ_border_width="1dp" />

            <TextView
                android:id="@+id/bikeNameTextView"
                style="@style/textView_Normal"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:textColor="#D35400"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/bikeModelTextView"
                style="@style/textView_Normal"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:textColor="@color/ColorBlack" />

            <TextView
                android:id="@+id/bikeNoTextView"
                style="@style/textView_Normal"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:textColor="@color/ColorBlack" />

            <com.example.gojack.gojack.HelperClasses.SwipeButtonStyle.SwipeButton
                android:id="@+id/my_swipe_button"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/right_arrows"
                android:minHeight="50dp"
                android:text="@string/onlineslide"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/contentSizeLarge"
                android:theme="@style/button_style_transprent"
                android:visibility="visible" />

            <View
                android:id="@+id/onLineView"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="10dp"
                android:background="@color/ColorGray"
                android:visibility="gone"></View>

            <TextView
                android:id="@+id/onLinePageBalanceTextView"
                style="@style/textView_Normal"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:textColor="@color/ColorBlack"
                android:textSize="16sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/balanceStatus"
                style="@style/textView_Normal"
                android:layout_margin="4dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:textColor="@color/ColorGray"
                android:visibility="visible" />

            <Button
                android:id="@+id/pilotAccountRechargeButton"
                android:layout_width="140dp"
                android:layout_height="?attr/actionBarSize"
                android:layout_gravity="center"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="20dp"
                android:text="@string/recharge"
                android:theme="@style/button_style_redcolor"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>